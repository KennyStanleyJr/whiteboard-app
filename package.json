{
  "name": "whiteboard-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Infinite whiteboard app for text, images, videos, links, post-it notes, and arrows. Cross-platform: Windows, Mac, iPhone, iPad.",
  "scripts": {
    "generate-pwa-assets": "pwa-assets-generator",
    "dev": "vite",
    "build": "npm run generate-pwa-assets && tsc -b && vite build",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "ci": "npm run lint && npm run test:run && npm run build"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-query": "^5.90.20",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jszip": "^3.10.1",
    "lucide-react": "^0.563.0",
    "radix-ui": "^1.4.3",
    "react": "^18.3.1",
    "react-colorful": "^5.6.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jszip": "^3.4.1",
    "@types/node": "^25.2.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vite-pwa/assets-generator": "^1.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "happy-dom": "^20.5.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.15.0",
    "vite": "^5.4.11",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18"
  }
}
